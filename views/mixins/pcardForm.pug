mixin pcardForm(pokemon, actionURL, title)

    div.form-panel
        div.header= title
            form(action=actionURL method='post')
div.form-panel
    div.header  Edit Pokemon
        form(action=actionURL method='post')
            div.form-input
                label(for='name') Name:
                input(type='text' id='name' name='name' value=pokemon.name)
            div.form-input
                label(for='type') Type:
                input(type='text' id='type' name='type' value=pokemon.type)
            div.form-input
                label(for='health') Health:
                input(type='text' id='health' name='health' value=pokemon.health)
            div.form-input
                label(for='image') Image URL:
                input(type='text' id='image' name='image' value=pokemon.image)
            div.form-input
                label(for='attackOneTitle') Attack One:
                input(type='text' id='attackOneTitle' name='attackOneTitle' value=pokemon.attackOneTitle)
            div.form-input
                label(for='attackOneCost') Attack One Cost:
                input(type='text' id='attackOneCost' name='attackOneCost' value=pokemon.attackOneCost)
            div.form-input
                label(for='attackOneCost2') Attack One Cost (2):
                input(type='text' id='attackOneCost2' name='attackOneCost2' value=pokemon.attackOneCost2)
            div.form-input
                label(for='attackTwoTitle') Attack Two:
                input(type='text' id='attackTwoTitle' name='attackTwoTitle' value=pokemon.attackTwoTitle)
            div.form-input
                label(for='attackTwoCost') Attack Two Cost:
                input(type='text' id='attackTwoCost' name='attackTwoCost' value=pokemon.attackTwoCost)
            div.form-input
                label(for='attackTwoCost2') Attack Two Cost (2):
                input(type='text' id='attackTwoCost2' name='attackTwoCost2' value=pokemon.attackTwoCost2)
            div.form-input
                label(for='resistance') Resistance:
                input(type='text' id='resistance' name='resistance' value=pokemon.resistance)
            div.form-input
                label(for='weakness') Weakness:
                input(type='text' id='weakness' name='weakness' value=pokemon.weakness)
            div.button-row
                a.button.cancel(href='/') Cancel
                a.button.delete(href=`/delete/${pokemon.id}`) Delete
                button.button.save(type='submit') Submit
